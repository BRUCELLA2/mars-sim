<?xml version="1.0" ?>

<manufacturing-processes>

	<process name="Extract hematite from regolith" tech="1" skill="1" work-time="100" process-time="0">
		<inputs>
			<resource name="regolith" amount="50.0" />
		</inputs>
		<outputs>
			<resource name="hematite" amount="7.0" />
			<resource name="sand" amount="40.0" />
		</outputs>
	</process>
	
	<!-- Fe2O3 + 3CO -> 2Fe + 3CO2 -->
	<process name="Carbonyl process" tech="1" skill="1" work-time="50" process-time="100">
		<inputs>
			<resource name="hematite" amount="50.0" />
			<resource name="carbon monoxide" amount="26.4" />
		</inputs>
		<outputs>
			<resource name="iron powder" amount="34.9" />
			<resource name="carbon dioxide" amount="41.3" />
		</outputs>
	</process>
	
	<!-- Fe2O3 + 3H2 -> 2Fe + 3H2O -->
	<process name="Hydrogen iron reduction" tech="1" skill="1" work-time="50" process-time="100">
		<inputs>
			<resource name="hematite" amount="50.0" />
			<resource name="hydrogen" amount="2.5" />
		</inputs>
		<outputs>
			<resource name="iron powder" amount="34.9" />
			<resource name="water" amount="16.9" />
		</outputs>
	</process>
	
	<process name="Iron ingot casting" tech="2" skill="2" work-time="100" process-time="100">
		<inputs>
			<resource name="iron powder" amount="50.0" />
		</inputs>
		<outputs>
			<part name="iron ingot" number="5" />
		</outputs>
	</process>
	
	<process name="Steel ingot alloying" tech="2" skill="2" work-time="100" process-time="50">
		<inputs>
			<part name="iron ingot" number="5" />
			<resource name="carbon" amount="1.0" />
		</inputs>
		<outputs>
			<part name="steel ingot" number="5" />
		</outputs>
	</process>

</manufacturing-processes>