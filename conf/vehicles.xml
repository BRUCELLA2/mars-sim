<?xml version="1.0" ?>

<vehicle-configuration>

	<!-- Explorer rover -->
	<!-- A rover for collecting rock samples from remote sites
		 and ice prospecting. -->
	<rover type="Explorer Rover">

		<!-- The range of the rover (km) (required) -->
		<!-- Default: 3000.0 -->
		<range value="3000.0" />

		<!-- The fuel efficiency of the rover (km/kg) (required) -->
		<!-- Default: 2.0 -->
		<fuel-efficiency value="2.0" />

		<!-- Base speed of rover (km/hr) (required) -->
		<!-- Default: 30.0 -->
		<base-speed value="30.0" />

		<!-- Empty mass of rover (kg) (required) -->
		<!-- Default: 10000.0 -->
		<empty-mass value="10000.0" />

		<!-- The crew size of an rover -->
		<!-- Default: 4 -->
		<crew-size value="4" />

		<!-- Cargo capacity list -->
		<!-- total-capacity: total cargo capacity of rover. (kg) -->
		<!-- Default: 5500.0 -->
		<cargo total-capacity="5500.0">
 
			<!-- The methane cargo capacity of the rover (kg) -->
			<!-- Default: 1600.0 -->
			<capacity resource="Methane" value="1600.0" />

			<!-- The oxygen cargo capacity of the rover (kg) -->
			<!-- Default: 140.0 -->
			<capacity resource="Oxygen" value="140.0" />

			<!-- The water cargo capacity of the rover (kg) -->
			<!-- Default: 560.0 -->
			<capacity resource="Water" value="560.0" />

			<!-- The food cargo capacity of the rover (kg) -->
			<!-- Default: 210.0 -->
			<capacity resource="Food" value="210.0" />

			<!-- The rock samples cargo capacity of the rover (kg) -->
			<!-- Default: 2000.0 -->
			<capacity resource="Rock Samples" value="2000.0" />

			<!-- The ice cargo capacity of the rover (kg) -->
			<!-- Default: 2000.0 -->
			<capacity resource="Ice" value="2000.0" />

		</cargo>

		<!-- Number of EVA (Extra Vehicular Activity) suits in the rover -->
		<!-- Default: 4 -->
		<eva-suits value="4" />

		<!-- Sickbay -->
		<!-- Medical tech level of sickbay (see tech_level.txt) - default: 1 -->
		<!-- Number of beds in sickbay - default: 1 -->
		<sickbay tech-level="1" beds="1" />

		<!-- Lab -->
		<!-- Science tech level of lab (see tech_level.txt) - default: 1 -->
		<lab tech-level="1">
			<!-- Science tech speciality -->
			<tech-speciality value="Aerology" />	
		</lab>

	</rover>

	<!-- Transport rover -->
	<!-- A rover for transporting people from one settlement to another. -->
	<!-- Note: This rover type is not available in version 2.75. -->
	<rover type="Transport Rover">
		<range value="4000.0" />
		<fuel-efficiency value="2.0" />
		<base-speed value="30.0" />
		<empty-mass value="10000.0" />
		<crew-size value="8" />
		<cargo total-capacity="12000.0">
			<capacity resource="Methane" value="3750.0" />
			<capacity resource="Oxygen" value="1000.0" />
			<capacity resource="Water" value="4000.0" />
			<capacity resource="Food" value="787.5" />            
		</cargo>
		<eva-suits value="8" />
		<sickbay tech-level="3" beds="2" />
	</rover>
	
