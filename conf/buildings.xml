	<!-- A medium-sized, self-contained 200kW nuclear reactor that requires minimum maintenance. -->
	<building name="MD4 Nuclear Reactor" >
		<power-required base-power="0.0" base-power-down-power="0.0" />
		<functions>
			<power-generation>
				<power-source type="Standard Power Source" power="200.0" />
			</power-generation>
		</functions>
	</building>	
	
	<!-- An uninhabitable specialized building for water and air processing and recycling. -->
	<building name="Atmospheric Processor">
		<power-required base-power="50.0" base-power-down-power="10.0" />
		<functions>
			<resource-processing power-down-level=".5">
				<process name="Sebatier" default="on">
					<input resource="Carbon Dioxide" rate=".001" ambient="true" />
					<input resource="Hydrogen" rate=".002" ambient="false" />
					<output resource="Methane" rate=".004" ambient="false" />
					<output resource="Water" rate=".009" ambient="false" />
				</process>
				<process name="Water Electrolysis" default="off">
					<input resource="Water" rate=".001" ambient="false" />
					<output resource="Hydrogen" rate=".00011" ambient="false" />
					<output resource="Oxygen" rate=".00089" ambient="false" />
				</process>
				<process name="CO2 Reduction" default="on">
					<input resource="Carbon Dioxide" rate=".00825" ambient="true" />
					<output resource="Oxygen" rate=".003" ambient="false" />
					<output resource="Carbon Monoxide" rate=".00525" ambient="true" />
				</process>
				<process name="Water Recycling" default="off">
					<input resource="Waste Water" rate=".002" ambient="false" />
					<output resource="Water" rate=".00017" ambient="false" />
				</process>
				<process name="Carbon Scrubbing" default="off">
					<input resource="Carbon Dioxide" rate=".00067" ambient="false" />
					<output resource="Oxygen" rate=".0005" ambient="false" />
				</process>
				<process name="Ice Melting/Filtration" default="off">
					<input resource="Ice" rate=".01" ambient="false" />
					<output resource="Water" rate=".005" ambient="false" />
				</process>
			</resource-processing>
			<storage>
				<resource-storage resource="Hydrogen" capacity="10000.0" />
				<resource-storage resource="Methane" capacity="10000.0" />
				<resource-storage resource="Oxygen" capacity="10000.0" />
				<resource-storage resource="Water" capacity="10000.0" />
				<resource-storage resource="Ice" capacity="1000.0" />
			</storage>
		</functions>
	</building>		
	
