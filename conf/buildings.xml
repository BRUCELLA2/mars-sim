	<!-- A large greenhouse and botany lab. -->
	<building name="Large Greenhouse">
		<power-required base-power="10.0" base-power-down-power="0.0" />
		<functions>
			<life-support capacity="10" power-required="20.0" />
			<research tech-level="2" capacity="5">
